{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,   
        "target": "es5",
        "allowJs": true,
        "removeComments": true,
        "strictNullChecks": true,
        /* "noEmitOnError": true, */
    },
    "include": [
        "./src/**/*"
    ]
}